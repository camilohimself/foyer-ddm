---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Témoignages — Foyer de Charité Dents-du-Midi',
  description: 'Paroles de ceux qui ont vécu une retraite au Foyer de Charité Dents-du-Midi.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Expériences"
    title="Témoignages"
    subtitle="Paroles de ceux qui ont vécu une retraite au Foyer de Charité Dents-du-Midi."
  />

  <!-- Témoignages -->
  <Testimonials
    title="Ils ont vécu <span class='text-accent-400'>l'expérience</span>"
    subtitle="Des retraitants partagent ce qu'ils ont vécu au Foyer : paix, silence, rencontre avec l'Essentiel."
    testimonials={[
      {
        testimonial:
          'Toute ma reconnaissance pour l\'accueil chaleureux et le silence tellement habité de l\'Essentiel.',
        name: 'R.B.',
        job: 'Retraitant',
      },
      {
        testimonial: 'La beauté simple de ce lieu sait si bien chanter Dieu !',
        name: 'P. et R.G.',
        job: 'Couple de retraitants',
      },
      {
        testimonial: 'Merci de si bien nous accueillir, nous les assoiffés de l\'Essentiel !',
        name: 'Jacques',
        job: 'Retraitant',
      },
      {
        testimonial:
          'Quand je suis entré au Foyer, j\'ai ressenti un immense sentiment de paix, comme dans une cathédrale. J\'ai découvert que le silence, c\'est Quelqu\'un !',
        name: 'François',
        job: 'Retraitant',
      },
      {
        testimonial:
          'Ses paroles nous ont touchés en profondeur et nous ne lirons jamais plus la Parole du Seigneur comme avant !',
        name: 'Claire et Pierre',
        job: 'Couple de retraitants',
      },
      {
        testimonial: 'J\'ouvrirai une école de vie intérieure et j\'écrirai sur la porte : école d\'art.',
        name: 'Monique D.',
        job: 'Retraitante',
      },
    ]}
  />

  <!-- Citation forte -->
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl bg-surface-special">
    <blockquote class="text-center">
      <p class="text-xl md:text-2xl font-medium text-primary-600 mb-6 italic">
        "J'ai découvert que le silence, c'est <span class="text-accent-400">Quelqu'un</span> !"
      </p>
      <cite class="text-muted">— François, retraitant</cite>
    </blockquote>
  </section>

  <!-- CTA -->
  <CallToAction
    isDark
    actions={[
      {
        variant: 'primary',
        text: 'Vivre l\'expérience',
        href: '/retraites',
      },
      {
        text: 'S\'inscrire',
        href: '/contact/inscription',
      },
    ]}
  >
    <Fragment slot="title">À votre tour de vivre cette expérience</Fragment>

    <Fragment slot="subtitle">
      Rejoignez ceux qui ont découvert la paix et le silence habité de l'Essentiel. Inscrivez-vous à une retraite.
    </Fragment>
  </CallToAction>
</Layout>
