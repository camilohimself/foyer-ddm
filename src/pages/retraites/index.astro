---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import imgEnseignementAlpage from '~/assets/images/fddm-enseignement-alpage.jpg';

const metadata = {
  title: 'Retraites spirituelles en Suisse — 6 formats',
  description: 'Retraites spirituelles en Suisse romande : 6 jours, week-ends, couples, familles, journées et préparation au mariage. Foyer de Charité Dents-du-Midi, Bex.',
};
---

<Layout metadata={metadata}>
  <Hero>
    <Fragment slot="title">
      Nos <span class="text-accent-400">retraites spirituelles</span>
    </Fragment>
    <Fragment slot="subtitle">
      De la journée de découverte à la retraite de six jours, plusieurs chemins s'offrent à vous.
      Il y a toujours une place pour qui cherche le silence.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0">
        <img
          src="/images/fddm-chapelle-etoile.jpg"
          alt="La chapelle du Foyer illuminée, porte d'entrée vers les retraites spirituelles"
          class="w-full h-full object-cover"
          loading="eager"
        />
        <div class="absolute inset-0 bg-primary-900/60"></div>
      </div>
    </Fragment>
  </Hero>

  <Features2
    title="Chaque retraite, un chemin"
    subtitle="L'accueil, les repas, les enseignements et l'accompagnement spirituel font partie de chaque retraite."
    items={[
      {
        title: 'Six jours de silence',
        description: 'Du dimanche soir au samedi matin. Le format historique des Foyers : six jours pour cheminer dans le mystère de la foi, portés par les enseignements et le silence.',
        icon: 'tabler:sunset-2',
        callToAction: { text: 'Découvrir', href: '/retraites/6-jours' },
      },
      {
        title: 'Trois jours pour s\'arrêter',
        description: 'Du vendredi soir au dimanche après-midi. Idéal pour une première retraite ou pour vivre un temps fort de l\'année liturgique.',
        icon: 'tabler:calendar-event',
        callToAction: { text: 'Découvrir', href: '/retraites/week-end' },
      },
      {
        title: 'En couple',
        description: 'Du vendredi soir au dimanche après-midi. Un temps de dialogue, de réflexion conjugale et spirituelle. Vos enfants de 4 à 12 ans sont accueillis avec un programme adapté.',
        icon: 'tabler:hearts',
        callToAction: { text: 'Découvrir', href: '/retraites/couples' },
      },
      {
        title: 'En famille',
        description: 'Vivre la foi ensemble, petits et grands. Des thématiques actuelles, des moments de partage et de prière. Participation libre.',
        icon: 'tabler:home-heart',
        callToAction: { text: 'Découvrir', href: '/retraites/familles' },
      },
      {
        title: 'Une journée au Foyer',
        description: 'De 9h30 à 16h30. Enseignements, repas partagé et Eucharistie. Une porte d\'entrée toute simple pour découvrir le Foyer.',
        icon: 'tabler:sun',
        callToAction: { text: 'Découvrir', href: '/retraites/journees' },
      },
      {
        title: 'Préparation au mariage',
        description: 'Un week-end pour préparer votre engagement, accompagnés par des couples expérimentés et un prêtre. En partenariat avec le Diocèse de Sion.',
        icon: 'tabler:rings',
        callToAction: { text: 'Découvrir', href: '/retraites/preparation-mariage' },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-surface-alt"></div>
    </Fragment>
  </Features2>

  <Content
    tagline="Par où commencer ?"
    title="Chacun vient comme il est"
    image={{
      src: imgEnseignementAlpage,
      alt: 'Enseignement en plein air sur un alpage, groupe de retraitants assis en cercle face aux montagnes',
    }}
    items={[
      {
        title: 'C\'est la première fois ?',
        description: 'Une journée ou un week-end de trois jours : un premier pas, sans engagement, pour découvrir ce que le silence peut offrir.',
      },
      {
        title: 'Aller plus loin ?',
        description: 'La retraite de six jours est le cœur de la tradition des Foyers de Charité. Six jours de silence habité pour un vrai renouvellement intérieur.',
      },
      {
        title: 'En couple ou en famille ?',
        description: 'Des week-ends pensés pour cheminer ensemble. Vos enfants sont accueillis avec un programme adapté à leur âge.',
      },
      {
        title: 'Préparer votre mariage ?',
        description: 'Un week-end pour poser les fondations de votre engagement, accompagnés par des couples et un prêtre.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2 text-primary-600">
        Un pas à la fois
      </h3>
      Que vous soyez curieux, en quête de sens ou pratiquant de longue date, il y a une retraite pour vous.
      Aucune situation financière ne doit être un obstacle.
    </Fragment>
  </Content>

  <CallToAction
    isDark
    actions={[
      {
        variant: 'primary',
        text: 'Voir le programme 2026',
        href: '/programme',
        icon: 'tabler:calendar',
      },
      {
        text: "S'inscrire",
        href: '/contact/inscription',
      },
    ]}
  >
    <Fragment slot="title">
      17 retraites en <span class="text-accent-400">2026</span>
    </Fragment>
    <Fragment slot="subtitle">
      De février à septembre, retrouvez notre programme complet avec dates, thèmes et prédicateurs.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-primary-600"></div>
    </Fragment>
  </CallToAction>
</Layout>
