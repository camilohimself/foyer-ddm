---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Retraites spirituelles en Suisse — 6 formats',
  description: 'Retraites spirituelles en Suisse romande : 6 jours, week-ends, couples, familles, journées et préparation au mariage. Foyer de Charité Dents-du-Midi, Bex.',
};
---

<Layout metadata={metadata}>
  <Hero>
    <Fragment slot="title">
      Nos <span class="text-accent-400">retraites spirituelles</span>
    </Fragment>
    <Fragment slot="subtitle">
      Six formats adaptés à chaque besoin, de la journée découverte à la retraite de six jours.
      Trouvez la formule qui vous correspond.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-b from-primary-700 via-primary-600 to-primary-500"></div>
    </Fragment>
  </Hero>

  <Features2
    title="Choisissez votre format"
    subtitle="Chaque retraite comprend la pension complète, les enseignements et l'accompagnement spirituel"
    items={[
      {
        title: 'Retraites de 6 jours',
        description: 'Dimanche 18h30 → Samedi 10h. Six jours pour cheminer dans le mystère de la foi. 2 enseignements quotidiens, silence, accompagnement spirituel. Dès CHF 720.-',
        icon: 'tabler:sunset-2',
        callToAction: { text: 'Découvrir', href: '/retraites/6-jours' },
      },
      {
        title: 'Week-ends 3 jours',
        description: 'Vendredi 18h30 → Dimanche 15h. Idéal pour une première retraite ou vivre un temps liturgique fort (Carême, Pâques). Dès CHF 360.-',
        icon: 'tabler:calendar-event',
        callToAction: { text: 'Découvrir', href: '/retraites/week-end' },
      },
      {
        title: 'Trois jours pour couples',
        description: 'Vendredi 18h30 → Dimanche 15h. Dialogue, réflexion conjugale et spirituelle. Accueil des enfants de 4 à 12 ans avec animation dédiée.',
        icon: 'tabler:hearts',
        callToAction: { text: 'Découvrir', href: '/retraites/couples' },
      },
      {
        title: 'Week-end familles',
        description: 'Programme adapté petits et grands. Thématiques actuelles (Laudato Si). Moments forts : Ascension, week-ends prolongés. Participation libre.',
        icon: 'tabler:home-heart',
        callToAction: { text: 'Découvrir', href: '/retraites/familles' },
      },
      {
        title: 'Journées de ressourcement',
        description: '9h30 → 16h30. Café d\'accueil, 2 conférences, repas de midi, Eucharistie. Thèmes variés : art, culture, spiritualité. CHF 50.- tout compris.',
        icon: 'tabler:sun',
        callToAction: { text: 'Découvrir', href: '/retraites/journees' },
      },
      {
        title: 'Préparation au mariage',
        description: 'Samedi-dimanche, en partenariat avec le Diocèse de Sion. Couples animateurs + prêtre. CHF 200.- par couple. Hébergement possible.',
        icon: 'tabler:rings',
        callToAction: { text: 'Découvrir', href: '/retraites/preparation-mariage' },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-surface-alt"></div>
    </Fragment>
  </Features2>

  <Content
    tagline="Comment choisir ?"
    title="Quelle retraite est faite pour vous ?"
    items={[
      {
        title: 'Première fois ?',
        description: 'Commencez par une journée (CHF 50.-) ou un week-end 3 jours. Format accessible, sans engagement long.',
      },
      {
        title: 'Approfondir ?',
        description: 'La retraite de 6 jours est le format historique des Foyers de Charité. Six jours de silence habité pour un vrai renouvellement.',
      },
      {
        title: 'En couple ou en famille ?',
        description: 'Nos week-ends couples et familles sont conçus pour vous, avec accueil des enfants et animation adaptée.',
      },
      {
        title: 'Se marier ?',
        description: 'La préparation au mariage dans un cadre exceptionnel. Un week-end pour préparer votre engagement.',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2 text-primary-600">
        Un format pour chaque chemin
      </h3>
      Que vous soyez curieux, en quête de sens ou pratiquant régulier, nos retraites s'adaptent à votre rythme et à vos besoins.
      Personne n'est refusé pour des raisons financières.
    </Fragment>
  </Content>

  <CallToAction
    isDark
    actions={[
      {
        variant: 'primary',
        text: 'Voir le programme 2026',
        href: '/programme',
        icon: 'tabler:calendar',
      },
      {
        text: "S'inscrire",
        href: '/contact/inscription',
      },
    ]}
  >
    <Fragment slot="title">
      17 retraites en <span class="text-accent-400">2026</span>
    </Fragment>
    <Fragment slot="subtitle">
      De février à septembre, retrouvez notre programme complet avec dates, thèmes et prédicateurs.
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-primary-600"></div>
    </Fragment>
  </CallToAction>
</Layout>
