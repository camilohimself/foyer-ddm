---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Contact from '~/components/widgets/Contact.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Contactez-nous — Foyer de Charité Dents-du-Midi',
  description: 'N\'hésitez pas à nous écrire ou nous appeler. Nous serons heureux de répondre à vos questions.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Contact"
    title="Contactez-nous"
    subtitle="N'hésitez pas à nous écrire ou nous appeler. Nous serons heureux de répondre à vos questions."
  />

  <!-- Contact Form -->
  <Contact
    id="form"
    title="Envoyez-nous un message"
    subtitle="Remplissez le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais."
    inputs={[
      {
        type: 'text',
        name: 'prenom',
        label: 'Prénom',
        placeholder: 'Votre prénom',
        required: true,
      },
      {
        type: 'text',
        name: 'nom',
        label: 'Nom',
        placeholder: 'Votre nom',
        required: true,
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
        placeholder: 'votre.email@exemple.ch',
        required: true,
      },
      {
        type: 'tel',
        name: 'telephone',
        label: 'Téléphone',
        placeholder: '+41 XX XXX XX XX',
      },
    ]}
    textarea={{
      name: 'message',
      label: 'Message',
      placeholder: 'Votre message...',
      rows: 6,
      required: true,
    }}
    disclaimer={{
      label:
        'En soumettant ce formulaire, vous acceptez que vos données soient utilisées pour vous répondre.',
    }}
    button="Envoyer le message"
  />

  <!-- Coordonnées -->
  <Content
    isReversed
    items={[
      {
        title: 'Adresse',
        description: 'Route de Gryon 22<br/>CH - 1880 Bex',
      },
      {
        title: 'Téléphone',
        description: '<a href="tel:+41244632222" class="text-accent-400 hover:underline">+41 (0)24 463 22 22</a>',
      },
      {
        title: 'Email',
        description:
          '<a href="mailto:info@foyer-dents-du-midi.ch" class="text-accent-400 hover:underline">info@foyer-dents-du-midi.ch</a>',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1559827260-dc66d52bef19?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Contact Foyer de Charité',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2 text-primary-600">
        Foyer de Charité <span class="text-accent-400">Dents-du-Midi</span>
      </h2>
      <p class="text-muted mb-4">
        Notre équipe est à votre écoute pour répondre à toutes vos questions concernant les retraites, l'hébergement
        ou votre séjour au Foyer.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-surface-alt"></div>
    </Fragment>
  </Content>
</Layout>
