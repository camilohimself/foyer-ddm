---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'S\'inscrire à une retraite — Foyer de Charité Dents-du-Midi',
  description: 'Remplissez le formulaire d\'inscription. Vous recevrez une confirmation par email sous 48h.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Inscription"
    title="S'inscrire à une retraite"
    subtitle="Remplissez le formulaire ci-dessous. Vous recevrez une confirmation par email sous 48h."
  />

  <!-- Formulaire d'inscription -->
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <div class="mb-8 text-center">
      <h2 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2 text-primary-600">Formulaire d'inscription</h2>
      <p class="text-muted">
        Complétez ce formulaire pour vous inscrire à une retraite. Nous vous contacterons rapidement pour confirmer
        votre inscription.
      </p>
    </div>

    <form
      name="inscription"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
      class="bg-white shadow-lg rounded-lg p-8 space-y-6"
    >
      <input type="hidden" name="form-name" value="inscription" />
      <p class="hidden">
        <label>
          Don't fill this out if you're human: <input name="bot-field" />
        </label>
      </p>

      <!-- Informations personnelles -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="prenom" class="block text-sm font-medium text-primary-600 mb-2">
            Prénom <span class="text-accent-400">*</span>
          </label>
          <input
            type="text"
            id="prenom"
            name="prenom"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent"
            placeholder="Votre prénom"
          />
        </div>

        <div>
          <label for="nom" class="block text-sm font-medium text-primary-600 mb-2">
            Nom <span class="text-accent-400">*</span>
          </label>
          <input
            type="text"
            id="nom"
            name="nom"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent"
            placeholder="Votre nom"
          />
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="email" class="block text-sm font-medium text-primary-600 mb-2">
            Email <span class="text-accent-400">*</span>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent"
            placeholder="votre.email@exemple.ch"
          />
        </div>

        <div>
          <label for="telephone" class="block text-sm font-medium text-primary-600 mb-2">
            Téléphone <span class="text-accent-400">*</span>
          </label>
          <input
            type="tel"
            id="telephone"
            name="telephone"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent"
            placeholder="+41 XX XXX XX XX"
          />
        </div>
      </div>

      <!-- Choix de la retraite -->
      <div>
        <label for="retraite" class="block text-sm font-medium text-primary-600 mb-2">
          Retraite choisie <span class="text-accent-400">*</span>
        </label>
        <select
          id="retraite"
          name="retraite"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent"
        >
          <option value="">Sélectionnez une retraite</option>
          <option value="18-23-fevrier">18-23 février 2026 — Retraite spirituelle</option>
          <option value="26-28-fevrier">26-28 février 2026 — Journée et soirée de formation</option>
          <option value="11-16-mars">11-16 mars 2026 — Retraite spirituelle</option>
          <option value="18-23-mars">18-23 mars 2026 — Retraite spirituelle</option>
          <option value="25-30-mars">25-30 mars 2026 — Retraite spirituelle</option>
          <option value="1-6-avril">1-6 avril 2026 — Retraite spirituelle</option>
          <option value="8-13-avril">8-13 avril 2026 — Retraite Semaine Sainte</option>
          <option value="22-27-avril">22-27 avril 2026 — Retraite spirituelle</option>
          <option value="29-avril-4-mai">29 avril - 4 mai 2026 — Retraite spirituelle</option>
          <option value="6-11-mai">6-11 mai 2026 — Retraite spirituelle</option>
          <option value="13-18-mai">13-18 mai 2026 — Retraite spirituelle</option>
          <option value="20-25-mai">20-25 mai 2026 — Retraite spirituelle</option>
          <option value="27-mai-1-juin">27 mai - 1 juin 2026 — Retraite spirituelle</option>
          <option value="3-8-juin">3-8 juin 2026 — Retraite spirituelle</option>
          <option value="10-15-juin">10-15 juin 2026 — Retraite spirituelle</option>
          <option value="24-29-juin">24-29 juin 2026 — Retraite spirituelle</option>
          <option value="1-6-juillet">1-6 juillet 2026 — Retraite spirituelle</option>
        </select>
      </div>

      <!-- Hébergement -->
      <div>
        <label class="block text-sm font-medium text-primary-600 mb-3">
          Hébergement <span class="text-accent-400">*</span>
        </label>
        <div class="space-y-2">
          <div class="flex items-center">
            <input
              type="radio"
              id="chambre-individuelle"
              name="hebergement"
              value="Chambre individuelle"
              required
              class="w-4 h-4 text-accent-400 focus:ring-accent-400"
            />
            <label for="chambre-individuelle" class="ml-3 text-gray-700">Chambre individuelle</label>
          </div>
          <div class="flex items-center">
            <input
              type="radio"
              id="chambre-double"
              name="hebergement"
              value="Chambre double"
              class="w-4 h-4 text-accent-400 focus:ring-accent-400"
            />
            <label for="chambre-double" class="ml-3 text-gray-700">Chambre double</label>
          </div>
        </div>
      </div>

      <!-- Régime alimentaire -->
      <div>
        <label class="block text-sm font-medium text-primary-600 mb-3">Régime alimentaire</label>
        <div class="space-y-2">
          <div class="flex items-center">
            <input
              type="checkbox"
              id="vegetarien"
              name="regime-vegetarien"
              value="Végétarien"
              class="w-4 h-4 text-accent-400 focus:ring-accent-400 rounded"
            />
            <label for="vegetarien" class="ml-3 text-gray-700">Végétarien</label>
          </div>
          <div class="flex items-center">
            <input
              type="checkbox"
              id="sans-gluten"
              name="regime-sans-gluten"
              value="Sans gluten"
              class="w-4 h-4 text-accent-400 focus:ring-accent-400 rounded"
            />
            <label for="sans-gluten" class="ml-3 text-gray-700">Sans gluten</label>
          </div>
          <div class="flex items-center">
            <input
              type="checkbox"
              id="autre-regime"
              name="regime-autre"
              value="Autre"
              class="w-4 h-4 text-accent-400 focus:ring-accent-400 rounded"
            />
            <label for="autre-regime" class="ml-3 text-gray-700">Autre (précisez dans le message)</label>
          </div>
        </div>
      </div>

      <!-- Nombre de personnes -->
      <div>
        <label for="nombre-personnes" class="block text-sm font-medium text-primary-600 mb-2">
          Nombre de personnes <span class="text-accent-400">*</span>
        </label>
        <input
          type="number"
          id="nombre-personnes"
          name="nombre-personnes"
          min="1"
          max="10"
          value="1"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent"
        />
      </div>

      <!-- Message -->
      <div>
        <label for="message" class="block text-sm font-medium text-primary-600 mb-2">Message</label>
        <textarea
          id="message"
          name="message"
          rows="5"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent-400 focus:border-transparent"
          placeholder="Questions, besoins spécifiques, précisions sur votre régime alimentaire..."></textarea>
      </div>

      <!-- Conditions -->
      <div class="flex items-start">
        <input
          type="checkbox"
          id="conditions"
          name="conditions"
          required
          class="mt-1 w-4 h-4 text-accent-400 focus:ring-accent-400 rounded"
        />
        <label for="conditions" class="ml-3 text-sm text-gray-700">
          J'accepte les conditions de séjour et comprends que ma demande sera confirmée sous 48h par email. <span
            class="text-accent-400">*</span
          >
        </label>
      </div>

      <!-- Submit Button -->
      <div class="pt-4">
        <button
          type="submit"
          class="w-full bg-accent-400 text-white font-semibold py-4 px-6 rounded-lg hover:bg-accent-500 transition-colors duration-200 shadow-lg"
        >
          Envoyer ma demande d'inscription
        </button>
      </div>

      <p class="text-xs text-gray-500 text-center mt-4">
        <span class="text-accent-400">*</span> Champs obligatoires
      </p>
    </form>
  </section>
</Layout>
